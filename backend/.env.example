DATABASE_URL="mysql://root:root@db:3306/tonic_store"

# JWT

# Tạo JWT bằng code (Node.js)
# $bytes = New-Object byte[] 64; (New-Object System.Random).NextBytes($bytes); 
# $secret = -join ($bytes | ForEach-Object { "{0:x2}" -f $_ }); 
# Write-Host "JWT_SECRET=""$secret"""

# JWT_REFRESH_SECRET:
# $bytes = New-Object byte[] 64; (New-Object System.Random).NextBytes($bytes); 
# $refresh = -join ($bytes | ForEach-Object { "{0:x2}" -f $_ }); 
# Write-Host "JWT_REFRESH_SECRET=""$refresh"""

JWT_SECRET="your-secret-key"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Thông tin tài khoản email dùng để gửi mail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# VNPay
VNPAY_TMN_CODE="your-tmn-code"
VNPAY_SECRET_KEY="your-secret-key"
VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"
VNPAY_RETURN_URL="http://localhost:3000/orders/vnpay/callback"

# Server
PORT=8085
NODE_ENV=development
HOST=0.0.0.0

